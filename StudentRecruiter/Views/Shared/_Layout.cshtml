<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a href="/Home/Home" class="navbar-brand">
					<img src="~/Content/Layout/Images/Logo1.png" alt="Company logo" style="height:50px;" />
				</a>
				@Html.ActionLink("WebRecruiter", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo-name" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Rekrutacja", "Index", "Home")</li>
					@*<li>@Html.ActionLink("Konto", "Details", "Candidate")</li>*@
					@if (User.Identity.IsAuthenticated)
					{
						if (User.IsInRole("Admin"))
						{
							<li>@Html.ActionLink("Administracja", "Index", "Admin")</li>
						}

					}

				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>
	@if (User.Identity.IsAuthenticated)
	{
		if (User.IsInRole("Admin"))
		{
			<div class="row" style="text-align:center">
				<input type="button" value="Rekrutacje" class="btn btn-info" , style="margin:0px 5px 0px 5px; width:150px;" onclick="location.href='@Url.Action("GetAll", "Recruitment")'" />
				<input type="button" value="Kierunki" class="btn btn-info" , style="margin:0px 5px 0px 5px; width:150px;" onclick="location.href='@Url.Action("Index", "FieldOfStudies")'" />
				<input type="button" value="Kandydaci" class="btn btn-info" , style="margin:0px 5px 0px 5px; width:150px;" onclick="location.href='@Url.Action("GetAll", "Candidate")'" />
				<input type="button" value="Użytkownicy" class="btn btn-info" , style="margin:0px 5px 0px 5px; width:150px;" onclick="location.href='@Url.Action("GetAllUsers", "Admin")'" />
				<input type="button" value="Ustawienia" class="btn btn-info" , style="margin:0px 5px 0px 5px; width:150px;" onclick="location.href='@Url.Action("Settings", "Admin")'" />
			</div>
		}
	}
	<div class="container body-content" style="margin-top:20px">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; Copyrights @DateTime.Now.Year </p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
