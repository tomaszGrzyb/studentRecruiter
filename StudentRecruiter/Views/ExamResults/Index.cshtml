@model IEnumerable<StudentRecruiter.Models.Domain.ExamResult>


<h2>Twoje wyniki z egzaminu</h2>

<p>
	@Html.ActionLink("Dodaj nowy wynik", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Subject.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Result)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.IsAdvanced)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Subject.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Result)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.IsAdvanced)
			</td>
			<td>
				@Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
				@Html.ActionLink("Usuń", "Delete", new { id = item.Id })
			</td>
		</tr>
	}

</table>

@if (Model.Count() > 0)
{
	<input type="button" value="Wybierz kierunek studiów" class="btn btn-success" onclick="location.href='@Url.Action("Index", "Recruitment")'" />
}
