@model StudentRecruiter.Models.ViewModels.RequiredSubjectsViewModel



@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Wymagane przedmioty maturalne</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.RecruitmentId)
		<div class="form-group">
			@Html.LabelFor(model => model.Subjects, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.SubjectId, new SelectList(Model.Subjects, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
			</div>
		</div>		

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Zapisz" class="btn btn-primary" />
			</div>
		</div>
	</div>
}



